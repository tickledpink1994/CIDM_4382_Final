<!DOCTYPE html>
<html>
    <html xmlns:ng="http://angularjs.org" lang="en">
    <head>
        <title>Delve</title>
        
        <!--set up bootstrap-->
        <meta charset="utf-8">
        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">

        <!-- Latest compiled and minified JavaScript -->
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
		
        <!--get our own local stylesheet-->
        <link rel="stylesheet" src="./stylesheet.css">
    </head>
    <body background="./img/ModelDungeon.jpg">
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#!/">Dungeon Crawler</a>
                </div>
                <div>
                    <ul class="nav navbar-nav">
                        <li><a href="#!/dungeon">Create a Dungeon</a></li>
                        <li><a href="#!/gallery">Gallery</a></li>
                        <li><a href="#!/user">Create an Account</a></li>
                        <li><a href="#!/contact">Contact Us</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <% if (user) { %>
                        <li><a href="/signout">Sign Out</a></li>
                        <% } else { %>
                        <li><a href="/signin">Sign In</a></li>
                        <li><a href="/signup">Sign Up</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        
        <div class="container-fluid" style="background-color:white; height:100vh; margin-top:100px;">
            <div class="col-md-6 contentLeft">
                <section class="dungeonModule" ng-view></section>
            </div>
                
            <div class="col-md-6 contentRight">
                <section ng-view></section>
            </div>
        </div>

        <script type="text/javascript">
            window.user = <%- user || 'null' %>;
        </script>
        
        <!--Bring in the Angular libraries-->
        <script type="text/javascript" src="/lib/angular/angular.js"></script>
        <script type="text/javascript" src="/lib/angular-route/angular-route.js"></script>
        <script type="text/javascript" src="/lib/angular-resource/angular-resource.js"></script>
        <script type="text/javascript" src="/lib/angular-bootstrap/ui-bootstrap-tpls.js"></script>
        
        <!--import the dungeon module-->
        <script type="text/javascript" src="/dungeon/dungeon.client.module.js"></script>
        <script type="text/javascript" src="/dungeon/controllers/dungeon.client.controller.js"></script>
        <script type="text/javascript" src="/dungeon/config/dungeon.client.routes.js"></script>
        <script type="text/javascript" src="/dungeon/services/dungeon.client.service.js"></script>
        
        <script type="text/javascript" src="/users/users.client.module.js"></script>
        <script type="text/javascript" src="/user/services/authentication.client.server.js"></script>
        
        <!--import the application-->
        <script type="text/javascript" src="/application.js"></script>
    </body>
</html>